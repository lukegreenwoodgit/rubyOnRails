<!DOCTYPE html>
<html>
	<head>
		<title>BookstoreApp</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<div class="container">
			<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
				<h5 class="my-0 mr-md-auto font-weight-normal"> Sheffield Bookstore </h5>
				<nav class="my-2 my-md-0 mr-md-3">
					<a class="p-2 text-dark" href="#"><%= link_to "Home", '#' %></a>
					<a class="p-2 text-dark" href="#"><%= link_to "About Us", '#' %></a>
					<a class="p-2 text-dark" href="#"><%= link_to "Contact Us", '#' %></a>
<!-- 					<a class="p-2 text-dark" href="#"><%= link_to "Add new book", new_book_path %></a> -->
					<a class="p-2 text-dark" href="#"><%= link_to "Add new novel", new_novel_path %></a>
					<a class="p-2 text-dark" href="#"><%= link_to "Novels", novels_path %></a>
					<a class="p-2 text-dark" href="#"><%= link_to "Add new author", new_author_path %></a>
					<a class="p-2 text-dark" href="#"><%= link_to "Add new genre", new_genre_path %></a>
					<a class="p-2 text-dark" href="#"><%= link_to "Add new publisher", new_publisher_path %></a>
					<a class="p-2 text-dark" href="#"><%= link_to "Create Account", new_user_path %></a>
					<% if current_user %>
						<span class="p-2 text-dark">
							<%= link_to 'Log out', session_path('active'), method: :delete %>
						</span>
						<span class="p-2 text-dark">
							<%= current_user.userid %>
						</span>
					<% else %>
						<span class="p-2 text-dark">
							<%= link_to 'Log in', new_session_path, class: "active_nav_link" %>
						</span>
					<% end %>
				</nav> 
			</div>
		</div>
		<div class="container">
			<% if notice %>
			<%= notice %>
			<% end %>
			<% if alert %>
			<%= alert %>
			<% end %>

			<%= yield %>
		</div>
	</body>
</html>
